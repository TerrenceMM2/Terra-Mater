<div class="container">
    {{!-- logo and sign in / out--}}
    <div class="row">
        <div class="col-lg-6 text-left">
            <img class="terra-mater-logo" src="/assets/images/tm-logo.png" alt="Terra Mater Logo">
        </div>
        <div class="col-lg-6 text-right">
            <a class="btn btn-secondary my-5" role="button" href="/">Search</a>
            <a class="btn btn-secondary my-5" role="button" href="/logout">Logout</a>
        </div>
    </div>

    {{!-- welcome message --}}
    <div class="row my-5">
        <div class="col-lg-12 text-center">
            <h3>Welcome, {{user.firstName}}.</h3>
        </div>
    </div>

    <div class="row">
        <div class="container">
            <div class="row">
                {{#if user.profilePicture}}
                {{else}}
                <img class="profile-picture" src="/assets/images/generic.png">
                {{/if}}
            </div>
            <div class="row">
                <div class="col-6 text-right">First Name:</div>
                <div class="col-6">{{user.firstName}}</div>
            </div>
            <div class="row">
                <div class="col-6 text-right">Last Name:</div>
                <div class="col-6">{{user.lastName}}</div>
            </div>
            <div class="row">
                <div class="col-6 text-right">Email:</div>
                <div class="col-6">{{user.email}}</div>
            </div>
        </div>
    </div>
    <h3>My Favorites</h3>
    {{#if fav}}
    {{#each fav}}
    <div class="row">
        <div class="col-6">
            {{commonName}}
            <span class="fav-item" data-plantId="{{plantId}}">
                <i class="fas fa-info-circle" title="Plant Profile" style="cursor: pointer"></i>
            </span>
        </div>
    </div>
    {{/each}}
    {{else}}
    <h5>No favorites</h5>
    {{/if}}

