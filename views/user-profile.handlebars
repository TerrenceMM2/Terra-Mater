    <script>
        $(document).ready(function () {

            bsCustomFileInput.init()

            {{!-- Redirect user to searched plant results --}}
            $("#plant-search").on("click", function (event) {
                event.preventDefault();

                var searchTerm = $("#plantSearch").val().trim();

                if (searchTerm) {
                    window.location.href = "/plants/search/" + searchTerm;
                } else {
                    alert("Please enter a search term");
                }
            });

            {{!-- Redirect user to all plants page --}}
            $("#all-plants-btn").on("click", function (event) {
                event.preventDefault();
                window.location.href = "/api/plant-short";
            });

            {{!-- Redirect user to homepage --}}
            $(".terra-mater-logo").on("click", function () {
                window.location.href = "/";
            });

            {{!-- Redirect user to plant profile --}}
            $(".fav-item").on("click", function (event) {
                event.preventDefault();

                var plantId = $(this).data("plantid")
                console.log("plant Id: ",plantId)
                
                window.location.href = "/plant/"+plantId;
            });

        });
    </script>